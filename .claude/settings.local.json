{
  "permissions": {
    "allow": [
      "Read(pom.xml)",
      "Read(README.md)",
      "Read(src/**)",
      "Read(.gitignore)",
      "Grep",
      "Glob",
      "LS",
      "Bash(java:-version)",
      "Bash(mvn:-version)",
      "Bash(mvn:clean:*)",
      "Bash(mvn:compile:*)",
      "Bash(mvn:test-compile:*)",
      "Bash(mvn:test:*)",
      "Bash(mvn:dependency:tree)",
      "WebFetch(domain:mvnrepository.com)",
      "WebFetch(domain:docs.oracle.com)",
      "WebFetch(domain:spring.io)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:stackoverflow.com)"
    ],
    "deny": [
      "Read(./.env*)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(//etc/passwd)",
      "Bash(rm:*)",
      "Bash(git:push:*)"
    ],
    "ask": [
      "Write",
      "Edit",
      "MultiEdit",
      "Bash(mvn:package:*)",
      "Bash(mvn:install:*)",
      "Bash(mvn:deploy:*)",
      "Bash(git:add:*)",
      "Bash(git:commit:*)"
    ],
    "defaultMode": "default"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "github"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check_main_branch.py"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
