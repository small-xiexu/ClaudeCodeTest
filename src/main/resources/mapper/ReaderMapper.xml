<mapper namespace="com.xbk.mapper.ReaderMapper">

    <!-- 根据借书证号查找读者 -->
    <select id="findByCardNumber" resultType="com.xbk.entity.Reader">
        SELECT * FROM reader WHERE card_number = #{cardNumber}
    </select>

</mapper>
